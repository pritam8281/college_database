<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet" />
    <style>
      .card {
        transition: transform 0.3s ease;
      }
      .card:hover {
        transform: translateY(-2px);
      }
      .table th {
        background-color: #f8f9fa;
      }
      
      /* Enhanced Student List Styles */
      .bg-gradient-primary {
        background: linear-gradient(135deg, #0d6efd 0%, #6610f2 100%);
      }
      
      .avatar-circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 16px;
      }
      
      .student-name-link {
        transition: all 0.3s ease;
        cursor: pointer;
      }
      
      .student-name-link:hover {
        color: #0d6efd !important;
        text-decoration: underline !important;
        transform: scale(1.05);
      }
      
      .performance-indicator {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 4px;
      }
      
      .placement-info {
        min-width: 120px;
      }
      
      .student-row:hover {
        background-color: #f8f9fa;
        transform: scale(1.01);
        transition: all 0.2s ease;
      }
      
      .empty-state {
        padding: 2rem;
      }
      
      .btn-group .btn {
        margin: 0 2px;
      }
      
      .table-responsive {
        border-radius: 0 0 10px 10px;
        overflow: hidden;
      }
      
      .badge {
        font-size: 0.75em;
        padding: 0.5em 0.75em;
      }
      
      .progress {
        border-radius: 2px;
      }
      
      .search-highlight {
        background-color: #fff3cd;
        padding: 2px 4px;
        border-radius: 3px;
      }
      
      @media (max-width: 768px) {
        .table-responsive {
          font-size: 0.875rem;
        }
        
        .avatar-circle {
          width: 30px;
          height: 30px;
          font-size: 12px;
        }
        
        .btn-group .btn {
          padding: 0.25rem 0.5rem;
          font-size: 0.75rem;
        }
      }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <div class="container">
        <a class="navbar-brand" href="/admin">
          <i class="fas fa-cogs me-2"></i>Admin Panel
        </a>
        <div class="navbar-nav ms-auto d-flex flex-row">
          <a class="nav-link me-3" href="/admin">
            <i class="fas fa-users me-1"></i>Students
          </a>
          <a class="nav-link me-3" href="/admin/faculty">
            <i class="fas fa-chalkboard-teacher me-1"></i>Faculty
          </a>
          <a class="nav-link me-3" href="/admin/staff">
            <i class="fas fa-user-tie me-1"></i>Staff
          </a>
          <span class="navbar-text me-3">
            <i class="fas fa-user-shield me-2"></i>Administrator
          </span>
          <a class="nav-link" href="/logout">
            <i class="fas fa-sign-out-alt me-2"></i>Logout
          </a>
        </div>
      </div>
    </nav>

    <div class="container mt-4">
      <div class="row">
        <div class="col-12">
          <h2 class="mb-4">
            <i class="fas fa-users me-2"></i>Student Management System
          </h2>

          <!-- Add Student Form -->
          <div class="card mb-4">
            <div class="card-header bg-primary text-white">
              <h5 class="card-title mb-0">
                <i class="fas fa-user-plus me-2"></i>Add New Student
              </h5>
            </div>
            <div class="card-body">
              <form method="POST" action="/admin/add-student">
                <div class="row">
                  <div class="col-md-4 mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input
                      type="text"
                      class="form-control"
                      id="username"
                      name="username"
                      required
                    />
                  </div>
                  <div class="col-md-4 mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input
                      type="password"
                      class="form-control"
                      id="password"
                      name="password"
                      required
                    />
                  </div>
                  <div class="col-md-4 mb-3">
                    <label for="name" class="form-label">Full Name</label>
                    <input
                      type="text"
                      class="form-control"
                      id="name"
                      name="name"
                      required
                    />
                  </div>
                  <div class="col-md-6 mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input
                      type="email"
                      class="form-control"
                      id="email"
                      name="email"
                    />
                  </div>
                  <div class="col-md-6 mb-3">
                    <label for="deptId" class="form-label">Department</label>
                    <select class="form-select" id="deptId" name="deptId">
                      <option value="">Select Department</option>
                      <% if (departments && departments.length > 0) { %>
                        <% departments.forEach(dept => { %>
                          <option value="<%= dept.DeptID %>"><%= dept.DeptName %></option>
                        <% }); %>
                      <% } %>
                    </select>
                  </div>
                  <div class="col-md-6 mb-3">
                    <label for="dateOfBirth" class="form-label">Date of Birth</label>
                    <input
                      type="date"
                      class="form-control"
                      id="dateOfBirth"
                      name="dateOfBirth"
                    />
                  </div>
                  <div class="col-12 mb-3">
                    <label for="address" class="form-label">Address</label>
                    <textarea
                      class="form-control"
                      id="address"
                      name="address"
                      rows="3"
                    ></textarea>
                  </div>
                  <div class="col-12">
                    <button type="submit" class="btn btn-primary">
                      <i class="fas fa-plus me-2"></i>Add Student
                    </button>
                  </div>
                </div>
              </form>
            </div>
          </div>

          <!-- Add Marks Form -->
          <div class="card mb-4">
            <div class="card-header bg-primary text-white">
              <h5 class="card-title mb-0">
                <i class="fas fa-chart-line me-2"></i>Add Student Marks
              </h5>
            </div>
            <div class="card-body">
              <form method="POST" action="/admin/add-marks">
                <div class="row">
                  <div class="col-md-4 mb-3">
                    <label for="marks_student_id" class="form-label">Student</label>
                    <select class="form-select" id="marks_student_id" name="student_id" required>
                      <option value="">Select Student</option>
                      <% if (students) { %>
                        <% students.forEach(student => { %>
                          <option value="<%= student.StudentID %>"><%= student.Name %></option>
                        <% }); %>
                      <% } %>
                    </select>
                  </div>
                  <div class="col-md-4 mb-3">
                    <label for="subject" class="form-label">Subject</label>
                    <input
                      type="text"
                      class="form-control"
                      id="subject"
                      name="subject"
                      placeholder="e.g., Data Structures"
                      required
                    />
                  </div>
                  <div class="col-md-2 mb-3">
                    <label for="semester" class="form-label">Semester</label>
                    <input
                      type="number"
                      class="form-control"
                      id="semester"
                      name="semester"
                      min="1"
                      max="8"
                      required
                    />
                  </div>
                  <div class="col-md-2 mb-3">
                    <label for="score" class="form-label">Score</label>
                    <input
                      type="number"
                      step="0.01"
                      class="form-control"
                      id="score"
                      name="score"
                      min="0"
                      max="100"
                      required
                    />
                  </div>
                  <div class="col-12">
                    <button type="submit" class="btn btn-primary">
                      <i class="fas fa-plus me-2"></i>Add Marks
                    </button>
                  </div>
                </div>
              </form>
            </div>
          </div>

          <!-- Add Placement Form -->
          <div class="card mb-4">
            <div class="card-header bg-primary text-white">
              <h5 class="card-title mb-0">
                <i class="fas fa-briefcase me-2"></i>Add Student Placement
              </h5>
            </div>
            <div class="card-body">
              <form method="POST" action="/admin/add-placement">
                <div class="row">
                  <div class="col-md-3 mb-3">
                    <label for="placement_student_id" class="form-label">Student</label>
                    <select class="form-select" id="placement_student_id" name="student_id" required>
                      <option value="">Select Student</option>
                      <% if (students) { %>
                        <% students.forEach(student => { %>
                          <option value="<%= student.StudentID %>"><%= student.Name %></option>
                        <% }); %>
                      <% } %>
                    </select>
                  </div>
                  <div class="col-md-3 mb-3">
                    <label for="company" class="form-label">Company</label>
                    <input
                      type="text"
                      class="form-control"
                      id="company"
                      name="company"
                      placeholder="e.g., Tech Corp"
                      required
                    />
                  </div>
                  <div class="col-md-3 mb-3">
                    <label for="role" class="form-label">Role</label>
                    <input
                      type="text"
                      class="form-control"
                      id="role"
                      name="role"
                      placeholder="e.g., Software Engineer"
                      required
                    />
                  </div>
                  <div class="col-md-3 mb-3">
                    <label for="salary" class="form-label">Salary (₹)</label>
                    <input
                      type="number"
                      step="0.01"
                      class="form-control"
                      id="salary"
                      name="salary"
                      placeholder="800000"
                    />
                  </div>
                  <div class="col-md-6 mb-3">
                    <label for="datePlaced" class="form-label">Date Placed</label>
                    <input
                      type="date"
                      class="form-control"
                      id="datePlaced"
                      name="datePlaced"
                    />
                  </div>
                  <div class="col-12">
                    <button type="submit" class="btn btn-primary">
                      <i class="fas fa-plus me-2"></i>Add Placement
                    </button>
                  </div>
                </div>
              </form>
            </div>
          </div>
          <div class="card shadow-sm">
            <div class="card-header bg-gradient-primary text-white">
              <div class="row align-items-center">
                <div class="col-8">
                  <h5 class="card-title mb-0">
                    <i class="fas fa-users me-2"></i>Students List
                    <span class="badge bg-light text-dark ms-2"><%= students ? students.length : 0 %> Students</span>
                  </h5>
                </div>
                <div class="col-4 text-end">
                  <a href="/admin/export-students" class="btn btn-light btn-sm">
                    <i class="fas fa-download me-1"></i>Download CSV
                  </a>
                </div>
              </div>
            </div>
            <div class="card-body p-0">
              <div class="table-responsive">
                <table class="table table-hover mb-0" id="studentsTable">
                  <thead class="table-light">
                    <tr>
                      <th class="text-center">
                        <i class="fas fa-hashtag me-1"></i>ID
                      </th>
                      <th>
                        <i class="fas fa-user me-1"></i>Student Info
                      </th>
                      <th>
                        <i class="fas fa-building me-1"></i>Department
                      </th>
                      <th>
                        <i class="fas fa-calendar me-1"></i>Date of Birth
                      </th>
                      <th class="text-center">
                        <i class="fas fa-cogs me-1"></i>Actions
                      </th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if (students && students.length > 0) { %>
                      <% students.forEach(student => { %>
                        <tr class="student-row">
                          <td class="text-center">
                            <span class="badge bg-secondary">#<%= student.StudentID %></span>
                          </td>
                          <td>
                            <div class="d-flex align-items-center">
                              <div class="avatar-circle me-3">
                                <i class="fas fa-user"></i>
                              </div>
                              <div>
                                <h6 class="mb-0 fw-bold">
                                  <a href="/admin/student/<%= student.StudentID %>" class="text-decoration-none text-primary student-name-link">
                                    <%= student.Name %>
                                  </a>
                                </h6>
                                <small class="text-muted">
                                  <i class="fas fa-at me-1"></i><%= student.username %>
                                </small>
                                <br>
                                <small class="text-muted">
                                  <i class="fas fa-envelope me-1"></i><%= student.Email || 'No email' %>
                                </small>
                              </div>
                            </div>
                          </td>
                          <td>
                            <% if (student.DeptID || student.Department || student.DepartmentName) { %>
                              <span class="badge bg-primary">
                                <i class="fas fa-building me-1"></i>
                                <%= student.DepartmentName || 'Department #' + (student.DeptID || student.Department) %>
                              </span>
                              <% if (student.FacultyHeadName) { %>
                                <br>
                                <small class="text-muted">
                                  <i class="fas fa-user-tie me-1"></i><%= student.FacultyHeadName %>
                                </small>
                              <% } %>
                            <% } else { %>
                              <span class="badge bg-primary">
                                <i class="fas fa-exclamation-circle me-1"></i>Not Assigned
                              </span>
                            <% } %>
                          </td>
                          <td>
                            <% if (student.DateOfBirth) { %>
                              <span class="badge bg-primary">
                                <i class="fas fa-calendar me-1"></i><%= new Date(student.DateOfBirth).toLocaleDateString() %>
                              </span>
                            <% } else { %>
                              <span class="text-muted">Not provided</span>
                            <% } %>
                          </td>
                          <td class="text-center">
                            <form method="POST" action="/admin/delete-student" style="display: inline;">
                              <input type="hidden" name="id" value="<%= student.StudentID %>" />
                              <button
                                type="submit"
                                class="btn btn-sm btn-outline-danger"
                                onclick="return confirm('Are you sure you want to delete <%= student.Name %>?')"
                                title="Delete Student"
                              >
                                <i class="fas fa-trash"></i>
                              </button>
                            </form>
                          </td>
                        </tr>
                      <% }); %>
                      <% } else { %>
                        <tr>
                          <td colspan="6" class="text-center py-5">
                          <div class="empty-state">
                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No students found</h5>
                            <p class="text-muted">Start by adding your first student using the form above.</p>
                          </div>
                        </td>
                      </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Enhanced JavaScript -->
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        // Add smooth animations
        const cards = document.querySelectorAll('.card');
        cards.forEach(card => {
          card.addEventListener('mouseenter', function() {
            this.style.transform = 'translateY(-5px)';
            this.style.boxShadow = '0 8px 25px rgba(0,0,0,0.15)';
          });
          
          card.addEventListener('mouseleave', function() {
            this.style.transform = 'translateY(0)';
            this.style.boxShadow = '';
          });
        });
        
        // Add loading states for buttons
        const forms = document.querySelectorAll('form');
        forms.forEach(form => {
          form.addEventListener('submit', function() {
            const submitBtn = this.querySelector('button[type="submit"]');
            if (submitBtn) {
              submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Processing...';
              submitBtn.disabled = true;
            }
          });
        });
      });
    </script>
  </body>
</html>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Faculty Management - Admin Panel</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet" />
    <style>
      .card {
        transition: transform 0.3s ease;
      }
      .card:hover {
        transform: translateY(-2px);
      }
      .table th {
        background-color: #f8f9fa;
      }
      
      .bg-gradient-primary {
        background: linear-gradient(135deg, #0d6efd 0%, #6610f2 100%);
      }
      
      .avatar-circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 16px;
      }
      
      .faculty-row:hover {
        background-color: #f8f9fa;
        transform: scale(1.01);
        transition: all 0.2s ease;
      }
      
      .empty-state {
        padding: 2rem;
      }
      
      .btn-group .btn {
        margin: 0 2px;
      }
      
      .table-responsive {
        border-radius: 0 0 10px 10px;
        overflow: hidden;
      }
      
      .badge {
        font-size: 0.75em;
        padding: 0.5em 0.75em;
      }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <div class="container">
        <a class="navbar-brand" href="/admin">
          <i class="fas fa-cogs me-2"></i>Admin Panel
        </a>
        <div class="navbar-nav ms-auto d-flex flex-row">
          <a class="nav-link me-3" href="/admin">
            <i class="fas fa-users me-1"></i>Students
          </a>
          <a class="nav-link me-3 active" href="/admin/faculty">
            <i class="fas fa-chalkboard-teacher me-1"></i>Faculty
          </a>
          <a class="nav-link me-3" href="/admin/staff">
            <i class="fas fa-user-tie me-1"></i>Staff
          </a>
          <span class="navbar-text me-3">
            <i class="fas fa-user-shield me-2"></i>Administrator
          </span>
          <a class="nav-link" href="/logout">
            <i class="fas fa-sign-out-alt me-2"></i>Logout
          </a>
        </div>
      </div>
    </nav>

    <div class="container mt-4">
      <div class="row">
        <div class="col-12">
          <h2 class="mb-4">
            <i class="fas fa-chalkboard-teacher me-2"></i>Faculty Management
          </h2>

          <!-- Add Faculty Form -->
          <div class="card mb-4">
            <div class="card-header bg-primary text-white">
              <h5 class="card-title mb-0">
                <button class="btn btn-link text-white text-decoration-none p-0 w-100 text-start" type="button" data-bs-toggle="collapse" data-bs-target="#addFacultyForm" aria-expanded="true" aria-controls="addFacultyForm">
                  <i class="fas fa-user-plus me-2"></i>Add New Faculty Member
                  <i class="fas fa-chevron-right ms-2 float-end" id="addFacultyIcon"></i>
                </button>
              </h5>
            </div>
            <div class="collapse" id="addFacultyForm">
            <div class="card-body">
              <form method="POST" action="/admin/add-faculty">
                <div class="row">
                  <div class="col-md-6 mb-3">
                    <label for="facultyName" class="form-label">Full Name</label>
                    <input
                      type="text"
                      class="form-control"
                      id="facultyName"
                      name="name"
                      required
                    />
                  </div>
                  <div class="col-md-6 mb-3">
                    <label for="facultyDepartment" class="form-label">Department</label>
                    <input
                      type="text"
                      class="form-control"
                      id="facultyDepartment"
                      name="department"
                      placeholder="e.g., Computer Science"
                      required
                    />
                  </div>
                  <div class="col-md-6 mb-3">
                    <label for="facultyEmail" class="form-label">Email</label>
                    <input
                      type="email"
                      class="form-control"
                      id="facultyEmail"
                      name="email"
                      placeholder="faculty@college.com"
                    />
                  </div>
                  <div class="col-md-6 mb-3">
                    <label for="facultyPhone" class="form-label">Phone</label>
                    <input
                      type="tel"
                      class="form-control"
                      id="facultyPhone"
                      name="phone"
                      placeholder="+1234567890"
                    />
                  </div>
                  <div class="col-12">
                    <button type="submit" class="btn btn-primary">
                      <i class="fas fa-plus me-2"></i>Add Faculty Member
                    </button>
                  </div>
                </div>
              </form>
            </div>
            </div>
          </div>

          <!-- Faculty List -->
          <div class="card shadow-sm">
            <div class="card-header bg-gradient-primary text-white">
              <div class="row align-items-center">
                <div class="col-8">
                  <h5 class="card-title mb-0">
                    <i class="fas fa-chalkboard-teacher me-2"></i>Faculty List
                    <span class="badge bg-light text-dark ms-2"><%= faculty ? faculty.length : 0 %> Faculty Members</span>
                  </h5>
                </div>
                <div class="col-4 text-end">
                  <a href="/admin/export-faculty" class="btn btn-light btn-sm">
                    <i class="fas fa-download me-1"></i>Download CSV
                  </a>
                </div>
              </div>
            </div>
            <div class="card-body p-0">
              <div class="table-responsive">
                <table class="table table-hover mb-0" id="facultyTable">
                  <thead class="table-light">
                    <tr>
                      <th class="text-center">
                        <i class="fas fa-hashtag me-1"></i>ID
                      </th>
                      <th>
                        <i class="fas fa-user me-1"></i>Faculty Info
                      </th>
                      <th>
                        <i class="fas fa-building me-1"></i>Department
                      </th>
                      <th>
                        <i class="fas fa-phone me-1"></i>Phone
                      </th>
                      <th class="text-center">
                        <i class="fas fa-cogs me-1"></i>Actions
                      </th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if (faculty && faculty.length > 0) { %>
                      <% faculty.forEach(facultyMember => { %>
                        <tr class="faculty-row">
                          <td class="text-center">
                            <span class="badge bg-primary">#<%= facultyMember.FacultyID %></span>
                          </td>
                          <td>
                            <div class="d-flex align-items-center">
                              <div class="avatar-circle me-3">
                                <i class="fas fa-user"></i>
                              </div>
                              <div>
                                <h6 class="mb-0 fw-bold"><%= facultyMember.Name %></h6>
                                <small class="text-muted">
                                  <i class="fas fa-envelope me-1"></i><%= facultyMember.Email || 'No email' %>
                                </small>
                              </div>
                            </div>
                          </td>
                          <td>
                            <span class="badge bg-primary">
                              <i class="fas fa-building me-1"></i><%= facultyMember.Department %>
                            </span>
                          </td>
                          <td>
                            <i class="fas fa-phone me-1"></i><%= facultyMember.Phone || 'Not provided' %>
                          </td>
                          <td class="text-center">
                            <div class="btn-group" role="group">
                              <button
                                type="button"
                                class="btn btn-sm btn-outline-primary"
                                data-bs-toggle="modal"
                                data-bs-target="#editFacultyModal"
                                data-id="<%= facultyMember.FacultyID %>"
                                data-name="<%= facultyMember.Name || '' %>"
                                data-department="<%= facultyMember.Department || '' %>"
                                data-email="<%= facultyMember.Email || '' %>"
                                data-phone="<%= facultyMember.Phone || '' %>"
                                title="Edit Faculty"
                              >
                                <i class="fas fa-edit"></i>
                              </button>
                              <form method="POST" action="/admin/delete-faculty" style="display: inline;">
                                <input type="hidden" name="id" value="<%= facultyMember.FacultyID %>" />
                                <button
                                  type="submit"
                                  class="btn btn-sm btn-outline-danger"
                                  onclick="return confirm('Are you sure you want to delete this faculty member?')"
                                  title="Delete Faculty"
                                >
                                  <i class="fas fa-trash"></i>
                                </button>
                              </form>
                            </div>
                          </td>
                        </tr>
                      <% }); %>
                    <% } else { %>
                      <tr>
                        <td colspan="5" class="text-center py-5">
                          <div class="empty-state">
                            <i class="fas fa-chalkboard-teacher fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No faculty members found</h5>
                            <p class="text-muted">Start by adding your first faculty member using the form above.</p>
                          </div>
                        </td>
                      </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Edit Faculty Modal -->
    <div class="modal fade" id="editFacultyModal" tabindex="-1" aria-labelledby="editFacultyModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="editFacultyModalLabel">
              <i class="fas fa-edit me-2"></i>Edit Faculty Member
            </h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <form method="POST" action="/admin/update-faculty">
            <div class="modal-body">
              <input type="hidden" id="editFacultyId" name="id" />
              <div class="mb-3">
                <label for="editFacultyName" class="form-label">Full Name</label>
                <input type="text" class="form-control" id="editFacultyName" name="name" required />
              </div>
              <div class="mb-3">
                <label for="editFacultyDepartment" class="form-label">Department</label>
                <input type="text" class="form-control" id="editFacultyDepartment" name="department" required />
              </div>
              <div class="mb-3">
                <label for="editFacultyEmail" class="form-label">Email</label>
                <input type="email" class="form-control" id="editFacultyEmail" name="email" />
              </div>
              <div class="mb-3">
                <label for="editFacultyPhone" class="form-label">Phone</label>
                <input type="tel" class="form-control" id="editFacultyPhone" name="phone" />
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
              <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-1"></i>Update Faculty
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        // Edit modal functionality
        const editFacultyModal = document.getElementById('editFacultyModal');
        if (editFacultyModal) {
          editFacultyModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const facultyId = button.getAttribute('data-id');
            const facultyName = button.getAttribute('data-name');
            const facultyDepartment = button.getAttribute('data-department');
            const facultyEmail = button.getAttribute('data-email');
            const facultyPhone = button.getAttribute('data-phone');
            
            document.getElementById('editFacultyId').value = facultyId || '';
            document.getElementById('editFacultyName').value = facultyName || '';
            document.getElementById('editFacultyDepartment').value = facultyDepartment || '';
            document.getElementById('editFacultyEmail').value = facultyEmail || '';
            document.getElementById('editFacultyPhone').value = facultyPhone || '';
          });
        }
        
        // Handle collapse icon rotation
        const collapseElement = document.getElementById('addFacultyForm');
        const icon = document.getElementById('addFacultyIcon');
        
        if (collapseElement && icon) {
          collapseElement.addEventListener('show.bs.collapse', function() {
            icon.classList.remove('fa-chevron-right');
            icon.classList.add('fa-chevron-down');
          });
          
          collapseElement.addEventListener('hide.bs.collapse', function() {
            icon.classList.remove('fa-chevron-down');
            icon.classList.add('fa-chevron-right');
          });
        }
      });
    </script>
  </body>
</html>


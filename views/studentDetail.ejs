<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Student Details - Admin Panel</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet" />
    <style>
      .card {
        transition: transform 0.3s ease;
      }
      .card:hover {
        transform: translateY(-2px);
      }
      
      .student-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
      }
      
      .stats-card {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        color: white;
      }
      
      .marks-card {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        color: white;
      }
      
      .placement-card {
        background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
        color: white;
      }
      
      .department-card {
        background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
        color: white;
      }
      
      .avatar-large {
        width: 80px;
        height: 80px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 32px;
        color: white;
        border: 3px solid rgba(255, 255, 255, 0.3);
      }
      
      .grade-badge {
        font-size: 0.9em;
        padding: 0.5em 0.8em;
      }
      
      .back-btn {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        color: white;
        transition: all 0.3s ease;
      }
      
      .back-btn:hover {
        transform: translateX(-3px);
        color: white;
      }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <div class="container">
        <a class="navbar-brand" href="/admin">
          <i class="fas fa-graduation-cap me-2"></i>Admin Panel
        </a>
        <div class="navbar-nav ms-auto">
          <span class="navbar-text me-3">
            <i class="fas fa-user me-2"></i>Welcome, Admin!
          </span>
          <a class="nav-link" href="/logout">
            <i class="fas fa-sign-out-alt me-2"></i>Logout
          </a>
        </div>
      </div>
    </nav>

    <div class="container mt-4">
      <!-- Back Button -->
      <div class="row mb-4">
        <div class="col-12">
          <a href="/admin" class="btn back-btn">
            <i class="fas fa-arrow-left me-2"></i>Back to Students List
          </a>
        </div>
      </div>

      <% if (student) { %>
        <!-- Student Header -->
        <div class="row mb-4">
          <div class="col-12">
            <div class="card student-header">
              <div class="card-body">
                <div class="row align-items-center">
                  <div class="col-md-2 text-center">
                    <div class="avatar-large mx-auto">
                      <i class="fas fa-user"></i>
                    </div>
                  </div>
                  <div class="col-md-8">
                    <h2 class="mb-1"><%= student.Name %></h2>
                    <p class="mb-1">
                      <i class="fas fa-hashtag me-2"></i>Student ID: #<%= student.StudentID %>
                    </p>
                    <p class="mb-1">
                      <i class="fas fa-at me-2"></i>Username: <%= student.username %>
                    </p>
                    <p class="mb-0">
                      <i class="fas fa-envelope me-2"></i>Email: <%= student.Email || 'Not provided' %>
                    </p>
                  </div>
                  <div class="col-md-2 text-center">
                    <div class="stats-card rounded p-3">
                      <h4 class="mb-0"><%= stats.averageScore %>%</h4>
                      <small>Average Score</small>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Personal Information -->
        <div class="row mb-4">
          <div class="col-md-6">
            <div class="card">
              <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">
                  <i class="fas fa-user me-2"></i>Personal Information
                </h5>
              </div>
              <div class="card-body">
                <p><strong>Name:</strong> <%= student.Name %></p>
                <p><strong>Email:</strong> <%= student.Email || 'Not provided' %></p>
                <p><strong>Date of Birth:</strong> 
                  <% if (student.DateOfBirth) { %>
                    <%= new Date(student.DateOfBirth).toLocaleDateString() %>
                  <% } else { %>
                    Not provided
                  <% } %>
                </p>
                <p><strong>Address:</strong> 
                  <% if (student.Address) { %>
                    <%= student.Address %>
                  <% } else { %>
                    Not provided
                  <% } %>
                </p>
              </div>
            </div>
          </div>
          
          <!-- Department Information -->
          <div class="col-md-6">
            <div class="card department-card">
              <div class="card-header">
                <h5 class="card-title mb-0">
                  <i class="fas fa-building me-2"></i>Department Information
                </h5>
              </div>
              <div class="card-body">
                <% if (department) { %>
                  <p><strong>Department:</strong> <%= department.DeptName %></p>
                  <p><strong>Department ID:</strong> #<%= department.DeptID %></p>
                  <% if (department.HeadFacultyID) { %>
                    <p><strong>Head Faculty ID:</strong> #<%= department.HeadFacultyID %></p>
                  <% } %>
                <% } else { %>
                  <p class="text-muted">No department assigned</p>
                <% } %>
              </div>
            </div>
          </div>
        </div>

        <!-- Academic Performance -->
        <div class="row mb-4">
          <div class="col-12">
            <div class="card">
              <div class="card-header marks-card">
                <h5 class="card-title mb-0">
                  <i class="fas fa-chart-line me-2"></i>Academic Performance
                </h5>
              </div>
              <div class="card-body">
                <% if (marks && marks.length > 0) { %>
                  <div class="table-responsive">
                    <table class="table table-striped">
                      <thead>
                        <tr>
                          <th>Subject</th>
                          <th>Semester</th>
                          <th>Score</th>
                          <th>Grade</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% marks.forEach(mark => { %>
                          <tr>
                            <td><%= mark.Subject %></td>
                            <td>
                              <span class="badge bg-info">Semester <%= mark.Semester %></span>
                            </td>
                            <td>
                              <span class="badge <%= mark.Score >= 80 ? 'bg-success' : mark.Score >= 60 ? 'bg-warning text-dark' : 'bg-danger' %>">
                                <%= mark.Score %>%
                              </span>
                            </td>
                            <td>
                              <% 
                                let grade = 'F';
                                if (mark.Score >= 90) grade = 'A+';
                                else if (mark.Score >= 80) grade = 'A';
                                else if (mark.Score >= 70) grade = 'B';
                                else if (mark.Score >= 60) grade = 'C';
                                else if (mark.Score >= 50) grade = 'D';
                              %>
                              <span class="badge bg-secondary grade-badge"><%= grade %></span>
                            </td>
                          </tr>
                        <% }); %>
                      </tbody>
                    </table>
                  </div>
                <% } else { %>
                  <p class="text-muted">No marks available yet.</p>
                <% } %>
              </div>
            </div>
          </div>
        </div>

        <!-- Placement Information -->
        <div class="row mb-4">
          <div class="col-12">
            <div class="card">
              <div class="card-header placement-card">
                <h5 class="card-title mb-0">
                  <i class="fas fa-briefcase me-2"></i>Placement Information
                </h5>
              </div>
              <div class="card-body">
                <% if (placements && placements.length > 0) { %>
                  <div class="table-responsive">
                    <table class="table table-striped">
                      <thead>
                        <tr>
                          <th>Company</th>
                          <th>Role</th>
                          <th>Salary</th>
                          <th>Date Placed</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% placements.forEach(placement => { %>
                          <tr>
                            <td><strong><%= placement.Company %></strong></td>
                            <td><%= placement.Role %></td>
                            <td>
                              <% if (placement.Salary) { %>
                                <span class="badge bg-success">
                                  â‚¹<%= placement.Salary.toLocaleString() %>
                                </span>
                              <% } else { %>
                                <span class="text-muted">Not disclosed</span>
                              <% } %>
                            </td>
                            <td>
                              <% if (placement.DatePlaced) { %>
                                <%= new Date(placement.DatePlaced).toLocaleDateString() %>
                              <% } else { %>
                                <span class="text-muted">Not specified</span>
                              <% } %>
                            </td>
                          </tr>
                        <% }); %>
                      </tbody>
                    </table>
                  </div>
                <% } else { %>
                  <p class="text-muted">No placement information available yet.</p>
                <% } %>
              </div>
            </div>
          </div>
        </div>

      <% } else { %>
        <div class="alert alert-warning" role="alert">
          <h4 class="alert-heading">Student Not Found</h4>
          <p>The requested student information is not available.</p>
        </div>
      <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>



